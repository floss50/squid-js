{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "es6",
      "es7"
    ],
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist/node/",
    "rootDir": "./src/",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
